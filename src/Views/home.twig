{% extends "layouts/layout.twig" %}

{% block title %}

    Développeur web Gaël Dedenis portfolio.

{% endblock %}

{% block navbar %}

    {{ include ("layouts/navbar.twig") }}

    <div class="modal" id="contactModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header bg-secondary">
                    <h5 class="modal-title text-light">Formulaire de contact</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <form id="form_contact" class="container" method="POST" action="{{ url('contact') }}" enctype="multipart/form-data" novalidate>
                        <div class="mb-3">
                            <label for="nom" class="col-sm-8 col-form-label fw-bold required">Nom :</label>
                            <input type="text" class="form-control" id="nom" name="nom" required>
                            <span class="invalid-feedback">Merci de renseigner un nom valide !</span>
                        </div>
                        <div class="mb-3">
                            <label for="mail" class="col-sm-8 col-form-label fw-bold required">Email :</label>
                            <input type="email" class="form-control" id="mail" name="mail" required>
                            <span class="invalid-feedback">Merci de renseigner un mail valide !</span>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="col-sm-8 col-form-label fw-bold required">Sujet :</label>
                            <input type="text" class="form-control" id="subject" name="subject" required>
                            <span class="invalid-feedback">Merci de renseigner un sujet valide !</span>
                        </div>
                        <div>
                            <label for="message" class="col-sm-8 col-form-label fw-bold required">Message :</label>
                            <textarea id="message" class="form-control" name="message" rows="6" cols="120" required></textarea>
                            <span class="invalid-feedback">Merci de renseigner un message valide !</span>
                        </div>
                        <div class="container-fluid text-center">
                            <input type="submit" class="my-3 btn btn-outline-dark fw-bold" value="Envoyer">
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block header %}

    <header class="my-4 bg-dark">

        {% if session.erreur is not empty %}
            <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <symbol id="exclamation-triangle-fill" fill="currentColor" width="50" height="50" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </symbol>
            </svg>

            <div class="col-10 offset-1 col-md-4 offset-md-4 alert alert-danger d-flex alert-dismissible fade show" role="alert">
                <div class="col-1">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                </div>
                <p class="m-3">
                    <strong>{{ session.erreur[0] }}</strong>
                </p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}

        {% if session.success is not empty %}
            <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <symbol id="check-circle-fill" fill="currentColor" width="50" height="50" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </symbol>
            </svg>

            <div class="col-10 offset-1 col-md-4 offset-md-4 alert alert-success d-flex alert-dismissible fade show" role="alert">
                <div class="col-1">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                </div>
                <p class="m-3">
                    <strong>{{ session.success[0] }}</strong>
                </p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}

        <h1 class="py-4 text-light text-center text-decoration-underline fw-bold">Gaël Dedenis</h1>

    </header>

{% endblock %}

{% block content %}

    <main class="col-12 bg-light">

        {{ include ("home_parts/accueil.twig") }}

        {{ include ("home_parts/services.twig") }}

        {{ include ("home_parts/portfolio.twig") }}

    </main>

{% endblock %}

{% block footer %}

    <footer class="text-light text-center p-4">

        {{ include ("layouts/footer.twig") }}

    </footer>

{% endblock %}

{% block script %}

    <script async src="../public/js/checkForms.js"></script>
    <script async src="../public/js/loadmore.js"></script>
    <script async src="../public/js/main.js"></script>

{% endblock %}



