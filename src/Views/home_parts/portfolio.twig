<article id="portfolio" class="container-fluid my-4 text-center">

    <h2 class="my-3 text-decoration-underline fw-bold">Projets réalisés</h2>

    <div id="container-portfolio" class="d-flex flex-row flex-wrap justify-content-evenly align-items-center my-3">

        {% for project in lastProjects|slice(0,4) %}

            <div class="my-3 px-5 text-center project">
                <h3 class="text-decoration-underline fw-bold">{{ project.titre }}</h3>
                <a href="{{ project.lien }}" target="_blank" rel="noreferrer">
                    <img src="../public/images/projets/{{ project.lien_image }}" alt="{{ project.description }}" title="{{ project.description }}" rel="external">
                </a>
            </div>

        {% endfor %}

    </div>

    <button id="loadmore" class="my-3 btn btn-outline-dark fas fa-plus fa-2x"></button>

</article>
